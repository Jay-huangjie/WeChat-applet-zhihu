/* component/indexitem.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #F0F4F3;
}
.content-margin{
  margin-top: 90rpx;
}

.flex-row{
  display: flex;
  flex-direction: row;
}

.flex-cal{
  display: flex;
  flex-direction: column;
}
.x-center{
  justify-content: center;
}
.y-center{
  align-items: center;
}
.weight{
  flex: 1;
}
.autoPadding{
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.contentPadding{
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.indexPadding{
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.question{
  display: block;
  font-size: 30rpx;
}
.answer{
  display: block;
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #a0acac
}
.content-bottom{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.content-bottom text{
  font-size: 25rpx;
  padding: 10rpx 10rpx 20rpx 0rpx;
  color: #a0acac
}
.content{
  border-bottom: 10px solid #eee;
  width: 100%;
  background: white;
}

.content-head{
  width: 100%;
  height: 80rpx;
}

.content-head image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
}
.content-head text{
  font-size: 25rpx;
  margin-left: 10rpx;
  color: #a0acac
}

.more{
    position: absolute;
    right: 16rpx;
}

.media{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.picker{
  width: 100%;
  height: 100rpx;
}