/* pages/chat.wxss */
.chat-content{
  width: 100%;
  height: 140rpx;
  border-bottom: 1px solid #ebebeb;
  background: white;
}
.image-round{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-left: 32rpx;
}

.chat-value{
   margin-left: 32rpx;
}
.chat-name{
   font-size: 36rpx;
   flex: 8;
}
.chat-time{
  font-size: 26rpx;
  margin-right: 32rpx;
  color: gray;
}
.chat-reply{
  font-size: 26rpx;
  margin-top: 10rpx;
  margin-left: 32rpx;
  color: gray;
}
